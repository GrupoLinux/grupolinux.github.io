---
layout: null
---
[
  {% for post in site.posts %}
    {
      "description" : "{{ post.resumo }}",
      "date"        : "{{ post.data }}",
      "categories"  : "{{ post.tag | array_to_sentence_string }}",
      "by"          : "{{ post.author }}",
      "url"         : "{{ site.baseurl }}{{ post.url }}",
      "questions"   : {{ post.titulo | jsonify }}

    } {% unless forloop.last %},{% endunless %}
  {% endfor %}
]
